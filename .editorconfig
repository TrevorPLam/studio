# EditorConfig is awesome: https://EditorConfig.org
# This file ensures consistent coding styles across different editors and IDEs

# top-most EditorConfig file
root = true

# ============================================================================
# Universal Defaults (applies to all files unless overridden)
# ============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ============================================================================
# TypeScript & JavaScript Files
# ============================================================================
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2
# Note: max_line_length handled by Prettier/ESLint

# ============================================================================
# JSON Files
# ============================================================================
[*.json]
indent_size = 2

# ============================================================================
# YAML Files
# ============================================================================
[*.{yml,yaml}]
indent_size = 2

# ============================================================================
# Markdown Files
# ============================================================================
# Trailing whitespace is preserved for markdown formatting (line breaks, lists)
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# ============================================================================
# Python Files
# ============================================================================
# Python standard is 4 spaces (PEP 8)
[*.py]
indent_size = 4

# ============================================================================
# Shell Scripts
# ============================================================================
[*.{sh,bash}]
indent_size = 2
# Shell scripts typically use spaces, but some prefer tabs
# Using spaces for consistency with rest of codebase

# ============================================================================
# CSS Files
# ============================================================================
[*.{css,scss,sass,less}]
indent_size = 2

# ============================================================================
# HTML Files
# ============================================================================
[*.html]
indent_size = 2

# ============================================================================
# Configuration Files
# ============================================================================
# TOML files (e.g., lychee.toml, Cargo.toml)
[*.toml]
indent_size = 2

# INI files
[*.ini]
indent_size = 2

# ============================================================================
# Makefile (requires tabs)
# ============================================================================
[Makefile]
indent_style = tab
# Makefiles require tabs, not spaces