{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ALIGNMENT Progress Tracker",
  "description": "Schema for meta/alignment-progress.json. Track progress through ALIGNMENT repository standards.",
  "type": "object",
  "properties": {
    "repository": { "type": "string", "description": "Repository name or identifier" },
    "started": { "type": "string", "format": "date", "description": "Date when ALIGNMENT process started (YYYY-MM-DD)" },
    "last_updated": { "type": "string", "format": "date-time", "description": "Last update timestamp (ISO 8601)" },
    "decision_points": {
      "type": "object",
      "properties": {
        "is_versioned_project": { "type": "boolean" },
        "project_type": { "type": "string", "enum": ["library", "application", "cli", "api", "infrastructure", "monorepo", "documentation"] },
        "primary_language": { "type": "string" },
        "cicd_platform": { "type": "string", "enum": ["github", "gitlab", "jenkins", "circleci", "azure-devops", "other", "none"] },
        "is_public_repo": { "type": "boolean" }
      }
    },
    "sections": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "properties": {
            "status": { "type": "string", "enum": ["not_started", "in_progress", "completed", "skipped"] },
            "tasks_complete": { "type": "integer", "minimum": 0 },
            "tasks_total": { "type": "integer", "minimum": 0 },
            "completed_tasks": { "type": "array", "items": { "type": "string" } },
            "pending_tasks": { "type": "array", "items": { "type": "string" } },
            "notes": { "type": "string" }
          }
        }
      }
    },
    "next_section": { "type": "integer", "minimum": 0, "maximum": 13 },
    "blockers": { "type": "array", "items": { "type": "string" } },
    "overall_progress": {
      "type": "object",
      "properties": {
        "p0_complete": { "type": "integer", "minimum": 0 },
        "p0_total": { "type": "integer", "minimum": 0 },
        "p1_complete": { "type": "integer", "minimum": 0 },
        "p1_total": { "type": "integer", "minimum": 0 },
        "health_score": { "type": "integer", "minimum": 0, "maximum": 100 }
      }
    }
  },
  "required": ["repository", "started"]
}
